@{
  Layout = "_Layout";
}

@model List<PizzaParlor.Models.MenuItem>;
@using PizzaParlor.Models;
@using Microsoft.AspNetCore.Identity;
@using System.Threading.Tasks;

<h1>Here is our menu!</h1>

@if (@Model.Count == 0)
{
  <h3>No menu items have been added yet</h3>
}

<ul>
  @foreach(MenuItem menuItem in Model)
  {
    <li>
      $@menuItem.Price @menuItem.Name
      <br>
      Description: @menuItem.Description
      <br>
      @Html.ActionLink("Edit menu item", "Edit", new {id = menuItem.MenuItemId})
      <br>
      @Html.ActionLink("Delete menu item", "Delete", new {id = menuItem.MenuItemId})
    </li>
  }
</ul>

<p>@Html.ActionLink("Start a new Order", "Create", "Orders")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add a menu item", "Create")</p>