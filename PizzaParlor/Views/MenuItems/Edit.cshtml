@{
  Layout = "_Layout";
}

@model PizzaParlor.Models.MenuItem

<h2>Edit</h2> 

<h4>Edit this menu item: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MenuItemId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Price)
  @Html.EditorFor(model => model.Price)

  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  @Html.LabelFor(model => model.IsTopping)
  @Html.EditorFor(model => model.IsTopping)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Menu", "Index")</p>