@{
  Layout = "_Layout";
}

@model PizzaParlor.Models.Order

<h4>Start your order with some very personal info</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.Label("Customer Information (Name, Phone Number, Address)")
  @Html.TextBoxFor(model => model.CustomerInfo)
  <br>
  @Html.Label("Is this a delivery?")
  @Html.EditorFor(model => model.IsDelivery)
  <br>
  <input type="submit" value="Start New Order" class="btn btn-default" />
}